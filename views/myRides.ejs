<% layout("/layouts/boilerplate") %>

<div class="container my-5">
    <h2 class="mb-4 text-center fw-bold">🚘 My Rides</h2>

    <!-- Rides Created Section -->
    <div class="card shadow mb-5">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">📝 Rides I Created</h4>
        </div>
        <div class="card-body">
            <% if (createdRides.length === 0) { %>
                <p class="text-muted">You haven't created any rides yet.</p>
            <% } else { %>
                <% createdRides.forEach(ride => { %>
                    <div class="ride-card p-3 border rounded mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1"><%= ride.pickUp %> ➡️ <%= ride.drop %></h5>
                                <p class="mb-0 text-muted">📅 <%= ride.date %></p>
                            </div>
                            <a href="/rides/<%= ride._id %>" class="btn btn-outline-primary">View Ride</a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <!-- Rides Booked Section -->
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">📦 Rides I Booked</h4>
        </div>
        <div class="card-body">
            <% if (bookedRides.length === 0) { %>
                <p class="text-muted">You haven't booked any rides yet.</p>
            <% } else { %>
                <% bookedRides.forEach(ride => { %>
                    <div class="ride-card p-3 border rounded mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1"><%= ride.pickUp %> ➡️ <%= ride.drop %></h5>
                                <p class="mb-0 text-muted">📅 <%= ride.date.toLocaleDateString() %></p>
                            </div>
                            <a href="/rides/<%= ride._id %>" class="btn btn-outline-success">View Ride</a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
</div>